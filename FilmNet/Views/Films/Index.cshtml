@model IEnumerable<FilmNet.Models.Film>

@{
    ViewData["Title"] = "Films";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1> Films </h1>
        <a asp-controller="Films" asp-action="Create" class="btn btn-primary">Add New Film</a>
    </div>
    <table class="table table-bordered">
        <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Year</th>
            <th>Description</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Id</td>
                <td>@film.Name</td>
                <td>@film.Year</td>
                <td>@film.Description</td>
                <td>@film.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@film.Id" class="btn btn-sm btn-primary me-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Show" asp-route-id="@film.Id" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye"></i> Show
                    </a>
                    <form asp-action="Delete" asp-route-id="@film.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this film?')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>